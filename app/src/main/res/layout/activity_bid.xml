<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.exsimsoft.biddingui.BidActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/timer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/endTime"
                android:layout_weight="1"
                android:textSize="@dimen/txtSize"
                android:padding="5dp"
                android:text="Ends at Tue, 17 18:30" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/leftTime"
                android:layout_weight="0.1"
                android:layout_gravity="end"
                android:textSize="@dimen/txtSize"
                android:padding="5dp"
                android:text="2d 13hrs 30mins left" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txtHeaderSize"
            android:text="CURRENT BID"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/txtHeaderSize"
            android:text="$ 750"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txtSize"
            android:text="minimum bid: 785"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"/>

        <EditText
            android:layout_width="@dimen/txtBoxWidth"
            android:layout_height="@dimen/txtBoxHeight"
            android:inputType="number"
            android:background="@drawable/txtback"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="@dimen/btnHeight"
            android:layout_height="wrap_content"
            android:text="confirm bid"
            android:textColor="#FFFFFF"
            android:padding="5dp"
            android:layout_margin="20dp"
            android:background="@drawable/btnback"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</RelativeLayout>
